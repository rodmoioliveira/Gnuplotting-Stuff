    png="${PLOT_CSV_DIR}/styles/${filename}.png"
    echo "styles ${file} -> ${png}"
    pdstat "${file}" \
      -vtrue \
      -pfalse \
      --color-bg "black" \
      --color-fg "white" \
      --font Arial \
      --font-scale 1.1 \
      --height 330 \
      --width 1500 \
      --line-width 2 \
      -o "${png}"
  done
