      -x40:60 \
      -o "${png}"
  done

  # --x-mod
  for file in $(fd . -t f -e csv "${DATA_CSV_DIR}"); do
    local png
    filename=$(echo "${file}" | awk -F'/' '{print $NF}' | awk -F'.' '{print $1}')
    png="${PLOT_CSV_DIR}/mod/${filename}.png"
    echo "--x-mod ${file} -> ${png}"
    pdstat "${file}" \
      -vtrue \
      -pfalse \
      --x-mod 2 \
      -o "${png}"
  done

  # --x-mod and --x-range
  for file in $(fd . -t f -e csv "${DATA_CSV_DIR}"); do
    local png
    filename=$(echo "${file}" | awk -F'/' '{print $NF}' | awk -F'.' '{print $1}')
